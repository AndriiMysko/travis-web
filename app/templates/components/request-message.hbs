<div class="request-message">
  {{#if this.isLinkable}}
    <a
      href={{this.lineLink}}
      class="request-message-link"
      tabindex="0"
      data-test-request-message-link="true"
    >
      <RequestMessageLine
        @iconClass={{this.iconClass}}
        @level={{this.message.level}}
        @code={{this.message.code}}
        @message={{this.readableMessage}}
        @tooltipText={{this.tooltipText}}
      />
    </a>
  {{else}}
    <div tabindex="0">
      <RequestMessageLine
        @iconClass={{this.iconClass}}
        @level={{this.message.level}}
        @code={{this.message.code}}
        @message={{this.readableMessage}}
        @tooltipText={{this.tooltipText}}
      />
    </div>
  {{/if}}
</div>
